                        </div>
                        <div class="card-detail d-flex justify-content-between align-items-center mt-3">
                            <h3 class="card-title fs-6 fw-normal m-0"><a href="#">Sport Shoes</a></h3>
                            <span class="card-price fw-bold">$120</span>
                        </div>
                    </div>
                </div>
                <div class="col mb-4">
                    <div class="product-card position-relative">
                        <div class="card-img">
                            <img src="https://images.pexels.com/photos/1240892/pexels-photo-1240892.jpeg" alt="Fashion Sneakers" class="product-image img-fluid">
                        </div>
                        <div class="card-detail d-flex justify-content-between align-items-center mt-3">
                            <h3 class="card-title fs-6 fw-normal m-0"><a href="#">Fashion Sneakers</a></h3>
                            <span class="card-price fw-bold">$95</span>
                        </div>
                    </div>
                </div>
                <div class="col mb-4">
                    <div class="product-card position-relative">
                        <div class="card-img">
                            <img src="https://images.pexels.com/photos/1598508/pexels-photo-1598508.jpeg" alt="Athletic Shoes" class="product-image img-fluid">
                        </div>
                        <div class="card-detail d-flex justify-content-between align-items-center mt-3">
                            <h3 class="card-title fs-6 fw-normal m-0"><a href="#">Athletic Shoes</a></h3>
                            <span class="card-price fw-bold">$110</span>
                        </div>
                    </div>
                </div>
            `;
            return;
        }
        products.forEach((prod, idx) => {
            grid.innerHTML += `
                <div class="col mb-4">
                    <div class="product-card position-relative">
                        <div class="card-img">
                            <img src="${prod.image}" alt="${prod.name}" class="product-image img-fluid">
                        </div>
                        <div class="card-detail d-flex flex-column align-items-start mt-3">
                            <h3 class="card-title fs-6 fw-normal m-0">${prod.name}</h3>
                            <p class="mb-1">${prod.desc}</p>
                            <span class="card-price fw-bold">$${prod.price}</span>
                        </div>
                    </div>
                </div>`;
        });
    }
    var addProductBtn = document.getElementById('addProductBtn');
    if (addProductBtn) {
        addProductBtn.onclick = function() {
            var addProductForm = document.getElementById('addProductForm');
            if (addProductForm) addProductForm.style.display = 'block';
        };
    }
    var cancelProductBtn = document.getElementById('cancelProductBtn');
    if (cancelProductBtn) {
        cancelProductBtn.onclick = function() {
            var addProductForm = document.getElementById('addProductForm');
            if (addProductForm) addProductForm.style.display = 'none';
        };
    }
    var saveProductBtn = document.getElementById('saveProductBtn');
    if (saveProductBtn) {
        saveProductBtn.onclick = function() {
            var name = document.getElementById('productNameInput').value;
            var desc = document.getElementById('productDescInput').value;
            var price = document.getElementById('productPriceInput').value;
            var imgInput = document.getElementById('productImageInput');
            if (!name || !desc || !price || !imgInput.files[0]) {
                alert('Please fill all fields and select an image.');
                return;
            }
            var reader = new FileReader();
            reader.onload = function(e) {
                products.push({
                    name,
                    desc,
                    price: parseFloat(price).toFixed(2),
                    image: e.target.result
                });
                renderProducts();
                var addProductForm = document.getElementById('addProductForm');
                if (addProductForm) addProductForm.style.display = 'none';
                document.getElementById('productNameInput').value = '';
                document.getElementById('productDescInput').value = '';
                document.getElementById('productPriceInput').value = '';
                document.getElementById('productImageInput').value = '';
            };
            reader.readAsDataURL(imgInput.files[0]);
        };
    }
    renderProducts();
    </script>
