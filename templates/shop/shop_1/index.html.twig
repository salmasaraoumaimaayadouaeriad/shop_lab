                    <input type="file" id="logoFile" class="form-control-custom" accept="image/*">
                </div>

                <div class="form-group">
                    <label class="form-label"><i class="fas fa-image"></i> Favicon URL</label>
                    <input type="url" id="faviconUrl" class="form-control-custom" value="{{ favicon_url|default('') }}" placeholder="https://example.com/favicon.ico">
                    <label class="form-label mt-2"><i class="fas fa-upload"></i> Upload Favicon</label>
                    <input type="file" id="faviconFile" class="form-control-custom" accept="image/*">
                </div>

                <div class="form-group">
                    <label class="form-label"><i class="fas fa-image"></i> Hero Image URL</label>
                    <input type="url" id="heroImageUrl" class="form-control-custom" value="{{ hero_image_url|default('') }}" placeholder="https://example.com/hero.jpg">
                    <label class="form-label mt-2"><i class="fas fa-upload"></i> Upload Hero Image</label>
                    <input type="file" id="heroImageFile" class="form-control-custom" accept="image/*">
                </div>
            </div>

            <!-- Colors Tab -->
            <div id="colors-tab" class="tab-content">
                <div class="color-grid">
                    <div class="color-input-group">
                        <label class="form-label">Primary Color</label>
                        <input type="color" id="primaryColor" value="{{ primary_color|default('#111111') }}">
                    </div>
                    <div class="color-input-group">
                        <label class="form-label">Secondary Color</label>
                        <input type="color" id="secondaryColor" value="{{ secondary_color|default('#6c757d') }}">
                    </div>
                    <div class="color-input-group">
                        <label class="form-label">Background Color</label>
                        <input type="color" id="backgroundColor" value="{{ background_color|default('#f8f8f8') }}">
                    </div>
                    <div class="color-input-group">
                        <label class="form-label">Text Color</label>
                        <input type="color" id="textColor" value="{{ text_color|default('#212529') }}">
                    </div>
                    <div class="color-input-group">
                        <label class="form-label">Link Color</label>
                        <input type="color" id="linkColor" value="{{ link_color|default('#ce071e') }}">
                    </div>
                    <div class="color-input-group">
                        <label class="form-label">Button Color</label>
                        <input type="color" id="buttonColor" value="{{ button_color|default('#e74c3c') }}">
                    </div>
                    <div class="color-input-group">
                        <label class="form-label">Accent Color</label>
                        <input type="color" id="accentColor" value="{{ accent_color|default('#111111') }}">
                    </div>
                    <div class="color-input-group">
                        <label class="form-label">Header Background</label>
                        <input type="color" id="headerBg" value="{{ header_bg|default('#ffffff') }}">
                    </div>
                    <div class="color-input-group">
                        <label class="form-label">Footer Background</label>
                        <input type="color" id="footerBg" value="{{ footer_bg|default('#f5f5f5') }}">
                    </div>
                    <div class="color-input-group">
                        <label class="form-label">Card Background</label>
                        <input type="color" id="cardBg" value="{{ card_bg|default('#ffffff') }}">
                    </div>
                    <div class="color-input-group">
                        <label class="form-label">Border Color</label>
                        <input type="color" id="borderColor" value="{{ border_color|default('#dee2e6') }}">
                    </div>
                    <div class="color-input-group">
                        <label class="form-label">Success Color</label>
                        <input type="color" id="successColor" value="{{ success_color|default('#28a745') }}">
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label"><i class="fas fa-image"></i> Background Image URL</label>
                    <input type="url" id="backgroundImage" class="form-control-custom" value="{{ background_image|default('') }}" placeholder="https://example.com/bg.jpg">
                </div>

                <div class="form-group">
                    <label class="form-label"><i class="fas fa-adjust"></i> Overlay Opacity: <span id="overlayOpacityValue">{{ overlay_opacity|default('0.5') }}</span></label>
                    <input type="range" id="overlayOpacity" class="range-slider" min="0" max="1" step="0.1" value="{{ overlay_opacity|default('0.5') }}">
                </div>
            </div>

            <!-- Typography Tab -->
            <div id="typography-tab" class="tab-content">
                <div class="form-group">
