        // Configuration management
        function saveConfig() {
            const config = {};
            const inputs = document.querySelectorAll('#customizeForm input, #customizeForm textarea, #customizeForm select');
            
            inputs.forEach(input => {
                if (input.type === 'checkbox') {
                    config[input.id] = input.checked ? 'true' : 'false';
                } else {
                    config[input.id] = input.value;
                }
            });
            
            localStorage.setItem('storeConfig', JSON.stringify(config));
            showNotification('Configuration saved successfully!', 'success');
        }

        function exportConfig() {
            const config = JSON.parse(localStorage.getItem('storeConfig') || '{}');
            const blob = new Blob([JSON.stringify(config, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'store-config.json';
            a.click();
            URL.revokeObjectURL(url);
            showNotification('Configuration exported!', 'info');
        }

        function importConfig() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';
            input.onchange = function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        try {
                            const config = JSON.parse(e.target.result);
                            localStorage.setItem('storeConfig', JSON.stringify(config));
                            location.reload();
                        } catch (error) {
                            showNotification('Invalid configuration file!', 'error');
                        }
                    };
                    reader.readAsText(file);
                }
            };
            input.click();
        }

        function resetConfig() {
            if (confirm('Are you sure you want to reset all customizations? This cannot be undone.')) {
