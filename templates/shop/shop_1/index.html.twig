    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

    <script>
        // Preloader
        window.addEventListener('load', function() {
            const preloader = document.querySelector('.preloader');
            if (preloader) {
                preloader.style.display = 'none';
            }
        });

        // Search functionality
        function toggleSearch() {
            const searchBox = document.querySelector('.search-box');
            searchBox.classList.toggle('show');
        }

        // Close search box
        var closeButton = document.querySelector('.close-button');
        if (closeButton) {
            closeButton.addEventListener('click', function() {
                var searchBox = document.querySelector('.search-box');
                if (searchBox) {
                    searchBox.classList.remove('show');
                }
            });
        }

        // Initialize Swiper
        const swiper = new Swiper('.main-swiper', {
            loop: true,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
            effect: 'fade',
            fadeEffect: {
                crossFade: true
            }
        });

        // Quantity controls
        document.addEventListener('click', function(e) {
            if (e.target.closest('.qty-number-plus')) {
                const input = e.target.closest('.quantity').querySelector('input');
                input.value = parseInt(input.value) + 1;
            }
            
            if (e.target.closest('.qty-number-minus')) {
                const input = e.target.closest('.quantity').querySelector('input');
                if (parseInt(input.value) > 1) {
                    input.value = parseInt(input.value) - 1;
                }
            }
            
            if (e.target.closest('.quantity-right-plus')) {
                const input = e.target.closest('.input-group').querySelector('input');
                input.value = parseInt(input.value) + 1;
            }
            
            if (e.target.closest('.quantity-left-minus')) {
                const input = e.target.closest('.input-group').querySelector('input');
                if (parseInt(input.value) > 1) {
                    input.value = parseInt(input.value) - 1;
                }
            }
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Add to cart functionality (placeholder)
        document.querySelectorAll('[data-bs-target="#modallong"]').forEach(button => {
            button.addEventListener('click', function() {
                console.log('Product added to cart');
            });
        });

        // Form submission (placeholder)
        var loginForm = document.getElementById('login-form');
        if (loginForm) {
            loginForm.addEventListener('submit', function(e) {
                e.preventDefault();
                console.log('Login form submitted');
            });
        }

        var searchForm = document.getElementById('search-form');
        if (searchForm) {
            searchForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const query = this.querySelector('input[name="q"]').value;
                console.log('Search query:', query);
            });
        }

    // Live update site name and colors
    document.addEventListener('DOMContentLoaded', function() {
        var siteNameInput = document.getElementById('siteNameInput');
        var siteNameDisplay = document.getElementById('siteNameDisplay');
        var primaryColorInput = document.getElementById('primaryColorInput');
        var secondaryColorInput = document.getElementById('secondaryColorInput');
        if (siteNameInput && siteNameDisplay) {
            siteNameInput.addEventListener('input', function() {
                siteNameDisplay.textContent = this.value || 'Stylish';
                document.title = this.value + ' - Shoes Online Store';
            });
        }
        if (primaryColorInput) {
            primaryColorInput.addEventListener('input', function() {
                document.documentElement.style.setProperty('--accent-color', this.value);
                document.documentElement.style.setProperty('--primary-color', this.value);
            });
        }
        if (secondaryColorInput) {
            secondaryColorInput.addEventListener('input', function() {
                document.documentElement.style.setProperty('--secondary-color', this.value);
            });
        }
        var backgroundColorInput = document.getElementById('backgroundColorInput');
        if (backgroundColorInput) {
            backgroundColorInput.addEventListener('input', function() {
                document.documentElement.style.setProperty('--background-color', this.value);
            });
        }
        var textColorInput = document.getElementById('textColorInput');
        if (textColorInput) {
            textColorInput.addEventListener('input', function() {
                document.documentElement.style.setProperty('--text-color', this.value);
            });
        }
        var linkColorInput = document.getElementById('linkColorInput');
        if (linkColorInput) {
            linkColorInput.addEventListener('input', function() {
                document.documentElement.style.setProperty('--link-color', this.value);
            });
        }
        var buttonColorInput = document.getElementById('buttonColorInput');
        if (buttonColorInput) {
            buttonColorInput.addEventListener('input', function() {
                document.documentElement.style.setProperty('--button-color', this.value);
            });
        }
        var accentColorInput = document.getElementById('accentColorInput');
        if (accentColorInput) {
            accentColorInput.addEventListener('input', function() {
                document.documentElement.style.setProperty('--accent-color', this.value);
            });
        }
        var getInTouchInput = document.getElementById('getInTouchInput');
        var getInTouchDisplay = document.getElementById('getInTouchDisplay');
        if (getInTouchInput && getInTouchDisplay) {
            getInTouchInput.addEventListener('input', function() {
                getInTouchDisplay.innerHTML = this.value.replace(/\n/g, '<br>');
            });
        }
    });

    // Product management
    let products = [];
    function renderProducts() {
        const grid = document.getElementById('productGrid');
        if (!grid) return;
