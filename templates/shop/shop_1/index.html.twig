                { id: 'letterSpacing', display: 'letterSpacingValue', suffix: 'px', cssVar: '--letter-spacing' },
                { id: 'containerWidth', display: 'containerWidthValue', suffix: 'px', cssVar: '--container-width' },
                { id: 'borderRadius', display: 'borderRadiusValue', suffix: 'px', cssVar: '--border-radius' },
                { id: 'spacing', display: 'spacingValue', suffix: 'rem', cssVar: '--spacing' },
                { id: 'headerHeight', display: 'headerHeightValue', suffix: 'px', cssVar: '--header-height' },
