            // Range slider updates
            const rangeInputs = [
                { id: 'fontSize', display: 'fontSizeValue', suffix: 'px', cssVar: '--font-size' },
                { id: 'headingSize', display: 'headingSizeValue', suffix: 'rem', cssVar: '--heading-size' },
