{% block javascripts %}
    {{ parent() }}
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let currentStep = 1;
            let selectedPlan = '';
            let stripe = null;
            let elements = null;
            let cardElement = null;
            let clientSecret = null;
            
            const templates = {
                'fashion': ['Trendy Boutique', 'Beauty Store', 'Fashion Hub'],
                'electronics': ['Tech Store', 'Gadget Shop', 'Electronics Pro'],
                'home': ['Home Decor', 'Living Space', 'Interior Design'],
                'health': ['Wellness Store', 'Health Hub', 'Fitness Pro'],
                'sports': ['Sports Store', 'Fitness Hub', 'Active Life'],
                'art': ['Creative Store', 'Art Gallery', 'Craft Corner'],
                'books': ['Book Store', 'Learning Hub', 'Education Plus'],
                'food': ['Food Store', 'Gourmet Shop', 'Beverage Hub']
            };

            // Initialize Stripe
            const initializeStripe = async () => {
                if (!stripe) {
                    stripe = Stripe('{{ stripe_public_key }}');
                    elements = stripe.elements();
                    cardElement = elements.create('card', {
                        style: {
                            base: {
                                fontSize: '16px',
                                color: '#374151',
                                '::placeholder': { color: '#9ca3af' }
                            }
                        }
                    });
                    cardElement.mount('#card-element');
                    cardElement.on('change', function(event) {
                        const displayError = document.getElementById('card-errors');
                        if (event.error) {
                            displayError.textContent = event.error.message;
                        } else {
                            displayError.textContent = '';
                        }
                    });
                }
            };

            // Plan Selection
            document.querySelectorAll('.plan-card').forEach(card => {
                card.addEventListener('click', function() {
                    document.querySelectorAll('.plan-card').forEach(c => c.classList.remove('selected'));
                    this.classList.add('selected');
                    selectedPlan = this.dataset.plan;
                    document.getElementById('selectedPlan').value = selectedPlan;
                    document.getElementById('planError').style.display = 'none';
                });
            });

            // Payment Method Selection and Toggle
            document.querySelectorAll('.payment-method-option').forEach(option => {
                option.addEventListener('click', function() {
                    document.querySelectorAll('.payment-method-option').forEach(opt => {
                        opt.classList.remove('selected');
                        opt.style.borderColor = '#e5e7eb';
                        opt.style.background = '#f9fafb';
                    });
                    this.classList.add('selected');
                    this.style.borderColor = '#8b5cf6';
                    this.style.background = 'rgba(139, 92, 246, 0.1)';
                    document.getElementById('paymentMethod').value = this.dataset.method;
                    document.querySelectorAll('.payment-section').forEach(section => section.style.display = 'none');
                    if (this.dataset.method === 'card') {
                        document.getElementById('card-details').style.display = 'block';
                    } else if (this.dataset.method === 'bank') {
                        document.getElementById('bank-details').style.display = 'block';
                    }
                });
            });

            // Template Selection Based on Niche
            document.getElementById('nicheSelect').addEventListener('change', function() {
                const templateSelect = document.getElementById('templateSelect');
                const selectedNiche = this.value;
                templateSelect.innerHTML = '<option value="">Select Template</option>';
                if (selectedNiche && templates[selectedNiche]) {
                    templates[selectedNiche].forEach(template => {
                        const option = document.createElement('option');
                        option.value = template.toLowerCase().replace(/\s+/g, '-');
                        option.textContent = template;
                        templateSelect.appendChild(option);
                    });
                }
            });

            // Step Navigation
            function updateStepIndicator() {
                for (let i = 1; i <= 5; i++) {
                    const stepCircle = document.getElementById(`step-${i}`);
                    const stepLine = document.getElementById(`line-${i}`);
                    if (i < currentStep) {
                        stepCircle.className = 'step-circle completed';
                        if (stepLine) stepLine.className = 'step-line completed';
                    } else if (i === currentStep) {
                        stepCircle.className = 'step-circle active';
                        if (stepLine) stepLine.className = 'step-line';
                    } else {
                        stepCircle.className = 'step-circle inactive';
                        if (stepLine) stepLine.className = 'step-line';
                    }
                }
                document.getElementById('currentStepText').textContent = currentStep;
                document.getElementById('prevBtn').disabled = currentStep === 1;
                document.getElementById('nextBtn').style.display = currentStep === 5 ? 'none' : 'inline-flex';
                document.getElementById('submitBtn').style.display = currentStep === 5 ? 'inline-flex' : 'none';
            }

            function showStep(step) {
                document.querySelectorAll('.step-content').forEach(content => {
                    content.style.display = 'none';
                });
                document.getElementById(`content-${step}`).style.display = 'block';
                updateStepIndicator();
                if (step === 4 && selectedPlan !== 'basic') {
                    initializeStripe();
                    fetchPaymentIntent();
                }
            }

            async function fetchPaymentIntent() {
                const response = await fetch('{{ path('subscription_create_payment_intent') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({ plan: selectedPlan })
                });
                const data = await response.json();
                if (data.clientSecret) {
                    clientSecret = data.clientSecret;
                    document.getElementById('paymentIntent').value = clientSecret.split('_secret_')[0];
                    if (cardElement) {
                        elements.update({ clientSecret: clientSecret });
                    }
                } else {
                    document.getElementById('payment-message').style.display = 'block';
                    document.getElementById('payment-message').textContent = data.message || 'Failed to initialize payment';
                }
            }

            function validateStep(step) {
                let isValid = true;
                console.log('Validating step:', step); // Debug log
                
                if (step === 1) {
                    if (!selectedPlan) {
                        document.getElementById('planError').style.display = 'block';
                        isValid = false;
                    }
                } else if (step === 4 && selectedPlan !== 'basic') {
                    const paymentMethod = document.getElementById('paymentMethod').value;
                    if (paymentMethod === 'card') {
                        const billingFields = document.querySelectorAll('#card-details [required]');
                        billingFields.forEach(field => {
                            const errorDiv = field.parentNode.querySelector('.error-message');
                            if (!field.value.trim()) {
                                field.classList.add('error');
                                if (errorDiv) errorDiv.textContent = 'This field is required';
                                isValid = false;
                            } else {
                                field.classList.remove('error');
                                if (errorDiv) errorDiv.textContent = '';
                            }
                        });
                    } else if (paymentMethod === 'bank') {
                        const ribCode = document.querySelector('input[name="rib_code"]')?.value || '';
                        const bankName = document.querySelector('input[name="bank_name"]')?.value || '';
                        const accountHolder = document.querySelector('input[name="account_holder"]')?.value || '';
                        
                        if (!ribCode || !bankName || !accountHolder) {
                            isValid = false;
                            alert('Please fill in all required bank details');
                        }
                    }
                } else {
                    // Validate other steps
                    const stepContent = document.getElementById(`content-${step}`);
                    const requiredFields = stepContent.querySelectorAll('[required]');
                    
                    console.log('Found required fields:', requiredFields.length); // Debug log
                    
                    requiredFields.forEach(field => {
                        const errorDiv = field.parentNode.querySelector('.error-message');
                        if (!field.value.trim()) {
                            field.classList.add('error');
                            if (errorDiv) errorDiv.textContent = 'This field is required';
                            isValid = false;
                            console.log('Field validation failed:', field.name); // Debug log
                        } else {
                            field.classList.remove('error');
                            if (errorDiv) errorDiv.textContent = '';
                            
                            // Email validation
                            if (field.type === 'email' && field.value) {
                                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                                if (!emailRegex.test(field.value)) {
                                    field.classList.add('error');
                                    if (errorDiv) errorDiv.textContent = 'Please enter a valid email address';
                                    isValid = false;
                                }
                            }
                        }
                    });
                }
                
                console.log('Validation result:', isValid); // Debug log
                return isValid;
            }

            // Next Button
            document.getElementById('nextBtn').addEventListener('click', async function() {
                if (validateStep(currentStep)) {
                    if (currentStep === 4 && selectedPlan !== 'basic') {
                        const paymentMethod = document.getElementById('paymentMethod').value;
                        if (paymentMethod === 'card') {
                            const { paymentMethod: stripePaymentMethod, error } = await stripe.createPaymentMethod({
                                type: 'card',
                                card: cardElement,
                            });
                            if (error) {
                                document.getElementById('card-errors').textContent = error.message;
                                return;
                            }
                            const { error: confirmError } = await stripe.confirmCardPayment(clientSecret, {
                                payment_method: stripePaymentMethod.id,
                            });
                            if (confirmError) {
                                document.getElementById('payment-message').textContent = confirmError.message;
                                return;
                            }
                        }
                        currentStep++;
                        showStep(currentStep);
                    } else {
                        currentStep++;
                        showStep(currentStep);
                    }
                }
            });

            // Previous Button
            document.getElementById('prevBtn').addEventListener('click', function() {
                if (currentStep > 1) {
                    currentStep--;
                    showStep(currentStep);
                }
            });

            // Success Popup Functions
            function showSuccessPopup(data) {
                console.log('Showing success popup with data:', data); // Debug log
                
                const popup = document.getElementById('successPopup');
                const message = document.getElementById('successMessage');
                const url = document.getElementById('successUrl');
                const visitBtn = document.getElementById('visitStoreBtn');

                if (!popup || !message || !url || !visitBtn) {
                    console.error('Popup elements not found');
                    alert('Success! Your store URL: ' + data.shop_url);
                    return;
                }

                message.textContent = data.message || 'Subscription successful!';
                url.textContent = data.shop_url || 'yourstore.shoplab.com';
                visitBtn.href = data.shop_url || '#';

                popup.classList.add('show');
                console.log('Popup should now be visible'); // Debug log
            }

            function hideSuccessPopup() {
                const popup = document.getElementById('successPopup');
                popup.classList.remove('show');
            }

            // Close popup when clicking outside
            document.getElementById('successPopup').addEventListener('click', function(e) {
                if (e.target === this) {
                    hideSuccessPopup();
                }
            });

            // Utility to disable required on hidden fields
            function disableHiddenRequiredFields() {
                document.querySelectorAll('input[required], select[required], textarea[required]').forEach(field => {
                    if (!field.offsetParent) {
                        field.dataset.wasRequired = 'true';
                        field.required = false;
                    }
                });
            }
            function restoreRequiredFields() {
                document.querySelectorAll('input, select, textarea').forEach(field => {
                    if (field.dataset.wasRequired) {
                        field.required = true;
                        delete field.dataset.wasRequired;
                    }
                });
            }

            // Form Submission - FIXED VERSION
            document.getElementById('subscriptionForm').addEventListener('submit', async function(e) {
                disableHiddenRequiredFields(); // This must be first!
                e.preventDefault();
                
                console.log('Form submitted'); // Debug log
                
                if (!validateStep(currentStep)) {
                    console.log('Validation failed'); // Debug log
                    return;
                }
                
                const submitBtn = document.getElementById('submitBtn');
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<div class="loading-spinner"></div> Processing...';
                submitBtn.disabled = true;
                
                const formData = new FormData(this);
                
                // Add payment data for non-basic plans
                if (selectedPlan !== 'basic') {
                    formData.append('payment_method', document.getElementById('paymentMethod').value);
                    if (document.getElementById('paymentMethod').value === 'bank') {
                        formData.append('rib_code', document.querySelector('input[name="rib_code"]')?.value || '');
                        formData.append('bank_name', document.querySelector('input[name="bank_name"]')?.value || '');
                        formData.append('account_holder', document.querySelector('input[name="account_holder"]')?.value || '');
                        formData.append('iban', document.querySelector('input[name="iban"]')?.value || '');
                        formData.append('bic_swift', document.querySelector('input[name="bic_swift"]')?.value || '');
                    } else {
                        formData.append('payment_intent', document.getElementById('paymentIntent').value);
                        formData.append('billing_name', document.querySelector('input[name="billing_name"]')?.value || '');
                        formData.append('billing_address1', document.querySelector('input[name="billing_address1"]')?.value || '');
                        formData.append('billing_address2', document.querySelector('input[name="billing_address2"]')?.value || '');
                        formData.append('billing_city', document.querySelector('input[name="billing_city"]')?.value || '');
                        formData.append('billing_postal_code', document.querySelector('input[name="billing_postal_code"]')?.value || '');
                        formData.append('billing_country', document.querySelector('input[name="billing_country"]')?.value || '');
                    }
                }
                
                try {
                    console.log('Sending request...'); // Debug log
                    
                    const response = await fetch('{{ path("subscription_process") }}', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                    });
                    
                    console.log('Response received:', response.status); // Debug log
                    
                    const data = await response.json();
                    console.log('Response data:', data); // Debug log
                    
                    if (data.success) {
                        console.log('Success! Showing popup...'); // Debug log
                        showSuccessPopup(data);
                    } else {
                        console.error('Error:', data.message);
                        alert('Error: ' + data.message);
                    }
                } catch (error) {
                    console.error('Fetch error:', error);
                    alert('An error occurred. Please try again.');
                } finally {
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                    restoreRequiredFields();
                }
            });

            // Template Selection Based on Niche - FIXED VERSION
            document.getElementById('nicheSelect').addEventListener('change', function() {
                const templateSelect = document.getElementById('templateSelect');
                const selectedNiche = this.value;
                
                console.log('Niche selected:', selectedNiche); // Debug log
                
                templateSelect.innerHTML = '<option value="">Select Template</option>';
                
                if (selectedNiche && templates[selectedNiche]) {
                    templates[selectedNiche].forEach(template => {
                        const option = document.createElement('option');
