{% extends 'base.html.twig' %}

{% block title %}Subscription - Shop Lab{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --gradient-primary: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);
            --gradient-secondary: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
            --shadow-primary: 0 25px 50px -12px rgba(139, 92, 246, 0.25);
            --shadow-hover: 0 35px 60px -12px rgba(139, 92, 246, 0.4);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e0f2fe 50%, #e0e7ff 100%);
            min-height: 100vh;
        }

        .subscription-container {
            min-height: 100vh;
            padding: 3rem 1rem;
        }

        .subscription-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .subscription-title {
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 900;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            margin-bottom: 1rem;
        }

        .subscription-subtitle {
            font-size: 1.25rem;
            color: #64748b;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Success Popup Styles */
        .success-popup {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 10000;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

        .success-popup.show {
            opacity: 1;
            visibility: visible;
        }

        .success-popup-content {
            background: white;
            border-radius: 2rem;
            padding: 3rem;
            max-width: 500px;
            width: 90%;
            text-align: center;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
            transform: scale(0.8);
            transition: transform 0.3s ease;
        }

        .success-popup.show .success-popup-content {
            transform: scale(1);
        }

        .success-popup-icon {
            width: 5rem;
            height: 5rem;
            background: linear-gradient(135deg, #10b981, #34d399);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            font-size: 2rem;
            color: white;
            animation: successPulse 2s infinite;
        }

        @keyframes successPulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        .success-popup-title {
            font-size: 2rem;
            font-weight: 800;
            color: #1f2937;
            margin-bottom: 1rem;
        }

        .success-popup-message {
            font-size: 1.1rem;
            color: #64748b;
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .success-popup-url {
            background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
            border-radius: 1rem;
            padding: 1.5rem;
            margin: 1.5rem 0;
            border: 1px solid #bae6fd;
        }

        .success-popup-url-text {
            font-family: 'Monaco', 'Menlo', monospace;
            font-size: 1rem;
            color: #0369a1;
            font-weight: 600;
            word-break: break-all;
        }

        .success-popup-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .success-popup-btn {
            padding: 1rem 2rem;
            border-radius: 0.75rem;
            font-weight: 600;
            font-size: 1rem;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .success-popup-btn-primary {
            background: var(--gradient-primary);
            color: white;
            box-shadow: var(--shadow-primary);
        }

        .success-popup-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
            color: white;
        }

        .success-popup-btn-secondary {
            background: #f3f4f6;
            color: #6b7280;
        }

        .success-popup-btn-secondary:hover {
            background: #e5e7eb;
            color: #374151;
        }

        /* Rest of your existing styles remain the same... */
        .step-indicator {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 3rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .step-item {
            display: flex;
            align-items: center;
        }

        .step-circle {
            width: 3rem;
            height: 3rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            transition: all 0.3s ease;
            position: relative;
        }

        .step-circle.active {
            background: var(--gradient-primary);
            color: white;
            box-shadow: var(--shadow-primary);
        }

        .step-circle.completed {
            background: #10b981;
            color: white;
        }

        .step-circle.inactive {
            background: #e5e7eb;
            color: #9ca3af;
        }

        .step-line {
            width: 4rem;
            height: 2px;
            background: #e5e7eb;
            margin: 0 1rem;
            transition: all 0.3s ease;
        }

        .step-line.completed {
            background: var(--gradient-primary);
        }

        .content-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(20px);
            border-radius: 2rem;
            padding: 3rem;
            box-shadow: var(--shadow-primary);
            border: 1px solid rgba(255, 255, 255, 0.2);
            max-width: 1200px;
            margin: 0 auto;
            transition: all 0.3s ease;
        }

        .content-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
        }

        .plans-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin: 2rem 0;
        }

        .plan-card {
            background: rgba(255, 255, 255, 0.8);
            border-radius: 1.5rem;
            padding: 2rem;
            border: 2px solid transparent;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .plan-card.selected {
            border-color: #8b5cf6;
            box-shadow: 0 20px 40px rgba(139, 92, 246, 0.2);
            transform: translateY(-5px);
        }

        .plan-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }

        .plan-badge {
            position: absolute;
            top: -10px;
            left: -10px;
            background: var(--gradient-primary);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0 0 1rem 0;
            font-size: 0.8rem;
            font-weight: 700;
        }

        .popular-badge {
            position: absolute;
            top: -15px;
            left: 50%;
            transform: translateX(-50%);
            background: linear-gradient(135deg, #f59e0b, #f97316);
            color: white;
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 700;
            box-shadow: 0 5px 15px rgba(245, 158, 11, 0.4);
        }

        .plan-price {
            font-size: 3rem;
            font-weight: 900;
            color: #1f2937;
            margin: 1rem 0;
        }

        .plan-period {
            color: #64748b;
            font-size: 1rem;
            margin-bottom: 2rem;
        }

        .plan-features {
            list-style: none;
            margin: 2rem 0;
        }

        .plan-features li {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            font-size: 0.95rem;
        }

        .plan-features .check {
            color: #10b981;
            margin-right: 0.75rem;
            font-size: 1.1rem;
        }

        .plan-features .cross {
            color: #ef4444;
            margin-right: 0.75rem;
            font-size: 1.1rem;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin: 2rem 0;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #374151;
        }

        .form-input {
            width: 100%;
            padding: 1rem;
            border: 2px solid #e5e7eb;
            border-radius: 0.75rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.8);
        }

        .form-input:focus {
            outline: none;
            border-color: #8b5cf6;
            box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
            background: white;
        }

        .form-input.error {
            border-color: #ef4444;
        }

        .error-message {
            color: #ef4444;
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        .form-textarea {
            min-height: 120px;
            resize: vertical;
        }

        .navigation-buttons {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 3rem;
            padding-top: 2rem;
            border-top: 1px solid #e5e7eb;
        }

        .btn {
            padding: 1rem 2rem;
            border-radius: 0.75rem;
            font-weight: 600;
            font-size: 1rem;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary {
            background: var(--gradient-primary);
            color: white;
            box-shadow: var(--shadow-primary);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
            color: #fff;
        }

        .btn-secondary {
            background: #f3f4f6;
            color: #6b7280;
        }

        .btn-secondary:hover {
            background: #e5e7eb;
            color: #374151;
        }

        .btn-secondary:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .btn-success {
            background: linear-gradient(135deg, #10b981, #34d399);
            color: white;
        }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(16, 185, 129, 0.4);
            color: white;
        }

        .loading-spinner {
            display: inline-block;
            width: 1rem;
            height: 1rem;
            border: 2px solid transparent;
            border-top: 2px solid currentColor;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        #payment-element {
            margin: 2rem 0;
            padding: 1rem;
            border: 2px solid #e5e7eb;
            border-radius: 0.75rem;
            background: rgba(255, 255, 255, 0.8);
        }

        #payment-message {
            color: #ef4444;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: none;
        }

        .payment-method-selector {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .payment-method-option {
            flex: 1;
            padding: 1rem;
            border: 2px solid #e5e7eb;
            border-radius: 0.75rem;
            cursor: pointer;
            text-align: center;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .payment-method-option.selected {
            border-color: #8b5cf6;
            background: rgba(139, 92, 246, 0.1);
        }

        .payment-method-option:hover {
            border-color: #8b5cf6;
        }

        @media (max-width: 768px) {
            .content-card {
                padding: 2rem 1.5rem;
                margin: 0 1rem;
            }

            .plans-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }

            .form-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .navigation-buttons {
                flex-direction: column;
                gap: 1rem;
            }

            .step-indicator {
                gap: 0.5rem;
            }

            .step-line {
                width: 2rem;
                margin: 0 0.5rem;
            }

            .success-popup-content {
                padding: 2rem;
                margin: 1rem;
            }

            .success-popup-buttons {
                flex-direction: column;
            }
        }

        @media (max-width: 480px) {
            .subscription-container {
                padding: 1rem;
            }

            .step-circle {
                width: 2.5rem;
                height: 2.5rem;
                font-size: 0.9rem;
            }

            .plan-card {
                padding: 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="subscription-container">
    <!-- Success Popup -->
    <div class="success-popup" id="successPopup">
        <div class="success-popup-content">
            <div class="success-popup-icon">
                <i class="fas fa-check"></i>
            </div>
            <h2 class="success-popup-title">ðŸŽ‰ Subscription Successful!</h2>
            <p class="success-popup-message" id="successMessage">
                Congratulations! Your store has been created successfully.
            </p>
            <div class="success-popup-url">
                <div style="font-weight: 600; color: #1f2937; margin-bottom: 0.5rem;">
                    <i class="fas fa-globe" style="color: #0369a1; margin-right: 0.5rem;"></i>
                    Your Store URL:
                </div>
                <div class="success-popup-url-text" id="successUrl">
                    yourstore.shoplab.com
                </div>
            </div>
            <div class="success-popup-buttons">
                <a href="#" class="success-popup-btn success-popup-btn-primary" id="visitStoreBtn" target="_blank">
                    <i class="fas fa-external-link-alt"></i> Visit Your Store
                </a>
                <a href="{{ path('dashboard') }}" class="success-popup-btn success-popup-btn-secondary">
                    <i class="fas fa-tachometer-alt"></i> Go to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Toast Container for notifications -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toastContainer" style="z-index: 9999;"></div>

    <!-- Header -->
    <div class="subscription-header">
        <h1 class="subscription-title">Launch Your Store</h1>
        <p class="subscription-subtitle">
            Choose your plan and get your customized shop online in minutes
        </p>
    </div>

    <!-- Step Indicator -->
    <div class="step-indicator">
        <div class="step-item">
            <div class="step-circle active" id="step-1">1</div>
        </div>
        <div class="step-line" id="line-1"></div>
        <div class="step-item">
            <div class="step-circle inactive" id="step-2">2</div>
        </div>
        <div class="step-line" id="line-2"></div>
        <div class="step-item">
            <div class="step-circle inactive" id="step-3">3</div>
        </div>
        <div class="step-line" id="line-3"></div>
        <div class="step-item">
            <div class="step-circle inactive" id="step-4">4</div>
        </div>
        <div class="step-line" id="line-4"></div>
        <div class="step-item">
            <div class="step-circle inactive" id="step-5">5</div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content-card">
        <form id="subscriptionForm" method="POST" action="{{ path('subscription_process') }}" novalidate>
            <!-- Step 1: Plan Selection -->
            <div class="step-content active" id="content-1">
                <h2 style="text-align: center; font-size: 2rem; font-weight: 700; margin-bottom: 2rem; color: #1f2937;">
                    Choose Your Plan
                </h2>
                
                <div class="plans-grid">
                    <!-- Basic Plan -->
                    <div class="plan-card" data-plan="basic">
                        <div class="plan-badge">FREE</div>
                        <h3 style="font-size: 1.5rem; font-weight: 700; color: #1f2937; text-align: center;">BASIC</h3>
                        <div class="plan-price" style="text-align: center;">FREE</div>
                        <div class="plan-period" style="text-align: center;">Per Month</div>
                        
                        <ul class="plan-features">
                            <li><i class="fas fa-check check"></i> Up to 50 products</li>
                            <li><i class="fas fa-check check"></i> Basic templates</li>
                            <li><i class="fas fa-check check"></i> Standard support</li>
                            <li><i class="fas fa-check check"></i> SSL Certificate</li>
                            <li><i class="fas fa-times cross"></i> Custom domain</li>
                            <li><i class="fas fa-times cross"></i> Advanced analytics</li>
                            <li><i class="fas fa-times cross"></i> Marketing tools</li>
                            <li><i class="fas fa-times cross"></i> Priority support</li>
                        </ul>
                        
                        <button type="button" class="btn btn-primary" style="width: 100%; justify-content: center;">
                            Choose Basic
                        </button>
                    </div>

                    <!-- Standard Plan -->
                    <div class="plan-card" data-plan="standard">
                        <div class="popular-badge">MOST POPULAR</div>
                        <div class="plan-badge">-20%</div>
                        <h3 style="font-size: 1.5rem; font-weight: 700; color: #1f2937; text-align: center;">STANDARD</h3>
                        <div class="plan-price" style="text-align: center;">$12.99</div>
                        <div class="plan-period" style="text-align: center;">Per Month</div>
                        
                        <ul class="plan-features">
                            <li><i class="fas fa-check check"></i> Up to 500 products</li>
                            <li><i class="fas fa-check check"></i> Premium templates</li>
                            <li><i class="fas fa-check check"></i> Priority support</li>
                            <li><i class="fas fa-check check"></i> SSL Certificate</li>
                            <li><i class="fas fa-check check"></i> Custom domain</li>
                            <li><i class="fas fa-check check"></i> Advanced analytics</li>
                            <li><i class="fas fa-check check"></i> Basic marketing tools</li>
                            <li><i class="fas fa-times cross"></i> API access</li>
                        </ul>
                        
                        <button type="button" class="btn btn-primary" style="width: 100%; justify-content: center;">
                            Choose Standard
                        </button>
                    </div>

                    <!-- Premium Plan -->
                    <div class="plan-card" data-plan="premium">
                        <div class="plan-badge">-25%</div>
                        <h3 style="font-size: 1.5rem; font-weight: 700; color: #1f2937; text-align: center;">PREMIUM</h3>
                        <div class="plan-price" style="text-align: center;">$18.99</div>
                        <div class="plan-period" style="text-align: center;">Per Month</div>
                        
                        <ul class="plan-features">
                            <li><i class="fas fa-check check"></i> Unlimited products</li>
                            <li><i class="fas fa-check check"></i> All premium templates</li>
                            <li><i class="fas fa-check check"></i> 24/7 Priority support</li>
                            <li><i class="fas fa-check check"></i> SSL Certificate</li>
                            <li><i class="fas fa-check check"></i> Custom domain</li>
                            <li><i class="fas fa-check check"></i> Advanced analytics</li>
                            <li><i class="fas fa-check check"></i> Full marketing suite</li>
                            <li><i class="fas fa-check check"></i> API access & integrations</li>
                        </ul>
                        
                        <button type="button" class="btn btn-primary" style="width: 100%; justify-content: center;">
                            Choose Premium
                        </button>
                    </div>
                </div>

                <input type="hidden" name="selected_plan" id="selectedPlan" required>
                <div class="error-message" id="planError" style="display: none; text-align: center;">
                    Please select a plan to continue
                </div>
            </div>

            <!-- Step 2: Personal Information -->
            <div class="step-content" id="content-2" style="display: none;">
                <h2 style="text-align: center; font-size: 2rem; font-weight: 700; margin-bottom: 2rem; color: #1f2937;">
                    Personal Information
                </h2>
                
                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">First Name *</label>
                        <input type="text" name="first_name" class="form-input" placeholder="Enter your first name" required>
                        <div class="error-message"></div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Last Name *</label>
                        <input type="text" name="last_name" class="form-input" placeholder="Enter your last name" required>
                        <div class="error-message"></div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Email Address *</label>
                        <input type="email" name="email" class="form-input" placeholder="your@email.com" required>
                        <div class="error-message"></div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Phone Number *</label>
                        <input type="tel" name="phone" class="form-input" placeholder="+1 (555) 123-4567" required>
                        <div class="error-message"></div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Business Name *</label>
                        <input type="text" name="business_name" class="form-input" placeholder="Your Business Name" required>
                        <div class="error-message"></div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Business Type *</label>
                        <select name="business_type" class="form-input" required>
                            <option value="">Select Business Type</option>
                            <option value="ecommerce">E-commerce Store</option>
                            <option value="fashion">Fashion & Apparel</option>
                            <option value="electronics">Electronics & Tech</option>
                            <option value="home">Home & Garden</option>
                            <option value="beauty">Beauty & Cosmetics</option>
                            <option value="sports">Sports & Fitness</option>
                            <option value="art">Art & Crafts</option>
                            <option value="food">Food & Beverage</option>
                            <option value="books">Books & Media</option>
                            <option value="other">Other</option>
                        </select>
                        <div class="error-message"></div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Existing Website (Optional)</label>
                    <input type="url" name="website" class="form-input" placeholder="https://your-website.com">
                </div>
            </div>

            <!-- Step 3: Business Address -->
            <div class="step-content" id="content-3" style="display: none;">
                <h2 style="text-align: center; font-size: 2rem; font-weight: 700; margin-bottom: 2rem; color: #1f2937;">
                    Business Address
                </h2>
                
                <div class="form-group">
                    <label class="form-label">Street Address *</label>
                    <input type="text" name="address" class="form-input" placeholder="123 Main Street, Suite 100" required>
                    <div class="error-message"></div>
                </div>
                
                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">City *</label>
