{% extends 'base.html.twig' %}

{% block title %}{{ niche.name }} - Templates{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        :root {
            --gradient-primary: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
            --gradient-secondary: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
            --shadow-primary: 0 25px 50px -12px rgba(139, 92, 246, 0.25);
            --shadow-hover: 0 35px 60px -12px rgba(139, 92, 246, 0.4);
        }
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--feane-bg);
            color: var(--feane-white);
        }
        .glass-card, .card, .feature-card, .niche-card {
            background: var(--feane-card-glass);
            border: 1.5px solid var(--feane-card-border);
            color: var(--feane-white);
            box-shadow: var(--feane-shadow);
        }
        .glass-card:hover, .card:hover, .feature-card:hover, .niche-card:hover {
            box-shadow: var(--feane-shadow-hover);
            background: rgba(34,34,34,0.97);
        }
        .card-title, .niche-title, .section-title, h1, h2, h3 {
            color: var(--feane-orange);
        }
        .btn-primary, .btn-primary-gradient, .btn-outline-gradient, .btn-outline-gradient:hover {
            background: var(--feane-orange);
            color: var(--feane-dark);
            border: none;
        }
        .btn-outline-gradient {
            background: transparent;
            border: 2px solid var(--feane-orange);
            color: var(--feane-orange);
        }
        .btn-outline-gradient:hover {
            background: var(--feane-orange);
            color: var(--feane-dark);
        }
        .stat-icon.purple, .stat-icon.blue, .stat-icon.green {
            background: linear-gradient(135deg, var(--feane-orange), var(--feane-yellow));
            color: var(--feane-dark);
        }
        .stat-number {
            color: var(--feane-orange);
        }
        .stat-label {
            color: #ffe082;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4 text-center">{{ niche.name }} Templates</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        {% for template in niche.templates %}
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="{{ template.preview }}" class="card-img-top" alt="{{ template.name }} preview" style="object-fit:cover; height:200px;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ template.name }}</h5>
                        <a href="#" class="btn btn-primary mt-auto">Preview</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="mt-4 text-center">
        <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">Back to All Niches</a>
    </div>
</div>
{% endblock %} 