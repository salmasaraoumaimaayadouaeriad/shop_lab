{% extends 'base.html.twig' %}

{% block title %}Welcome - Shop Lab{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        :root {
            --gradient-primary: linear-gradient(135deg,rgb(124, 230, 254) 0%,rgb(35, 33, 34) 100%);
            --gradient-secondary: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
            --shadow-primary: 0 25px 50px -12px rgba(139, 92, 246, 0.25);
            --shadow-hover: 0 35px 60px -12px rgba(139, 92, 246, 0.4);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e0f2fe 50%, #e0e7ff 100%);
            overflow-x: hidden;
            position: relative;
            min-height: 100vh;
        }

        /* Container fixes for proper centering */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        @media (min-width: 1400px) {
            .container {
                max-width: 1320px;
            }
        }

        /* Floating Background Elements */
        .floating-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
            overflow: hidden;
        }

        .floating-element {
            position: absolute;
            border-radius: 50%;
            filter: blur(60px);
            opacity: 0.1;
            animation: float 20s ease-in-out infinite;
        }

        .floating-element:nth-child(1) {
            width: 300px;
            height: 300px;
            background: linear-gradient(135deg, #8b5cf6, #ec4899);
            top: 10%;
            left: 10%;
            animation-delay: 0s;
            animation-duration: 25s;
        }

        .floating-element:nth-child(2) {
            width: 200px;
            height: 200px;
            background: linear-gradient(135deg, #3b82f6, #06b6d4);
            top: 60%;
            right: 15%;
            animation-delay: 5s;
            animation-duration: 30s;
        }

        .floating-element:nth-child(3) {
            width: 150px;
            height: 150px;
            background: linear-gradient(135deg, #10b981, #34d399);
            bottom: 20%;
            left: 20%;
            animation-delay: 10s;
            animation-duration: 35s;
        }

        .floating-element:nth-child(4) {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #f59e0b, #fbbf24);
            top: 30%;
            right: 30%;
            animation-delay: 15s;
            animation-duration: 28s;
        }

        /* Floating Icons */
        .floating-icon {
            position: absolute;
            font-size: 2rem;
            opacity: 0.1;
            animation: floatIcon 20s ease-in-out infinite;
        }

        .floating-icon:nth-child(5) {
            top: 20%;
            right: 25%;
            animation-delay: 2s;
        }

        .floating-icon:nth-child(6) {
            top: 70%;
            left: 15%;
            animation-delay: 7s;
        }

        .floating-icon:nth-child(7) {
            top: 40%;
            right: 10%;
            animation-delay: 12s;
        }

        /* Mouse Follower */
        .mouse-follower {
            position: fixed;
            width: 20px;
            height: 20px;
            background: linear-gradient(135deg, #8b5cf6, #ec4899);
            border-radius: 50%;
            filter: blur(5px);
            opacity: 0.3;
            pointer-events: none;
            z-index: 9999;
            transition: all 0.3s ease;
        }

        /* Content Wrapper */
        .content-wrapper {
            position: relative;
            z-index: 10;
            width: 100%;
        }

        /* Hero Section */
        .hero-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 0;
            position: relative;
            width: 100%;
        }

        .hero-title {
            font-size: clamp(3rem, 8vw, 8rem);
            font-weight: 900;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            line-height: 1.1;
            margin-bottom: 2rem;
            text-align: center;
        }

        .hero-subtitle {
            font-size: clamp(1.2rem, 3vw, 2rem);
            color: #64748b;
            margin-bottom: 3rem;
            text-align: center;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        /* Glass Card */
        .glass-card {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(20px);
            border-radius: 2rem;
            padding: 3rem;
            box-shadow: var(--shadow-primary);
            border: 1px solid rgba(255, 255, 255, 0.2);
            margin-bottom: 3rem;
            transition: all 0.3s ease;
            width: 100%;
            max-width: 1000px;
            margin-left: auto;
            margin-right: auto;
        }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
        }

        /* Feature Grid - Fixed to stay in one row */
        .features-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 1.5rem;
            margin: 2rem 0;
        }

        /* Responsive breakpoints for feature grid */
        @media (max-width: 1200px) {
            .features-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 1.25rem;
            }
        }

        @media (max-width: 768px) {
            .features-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
        }

        .feature-card {
            background: rgba(255, 255, 255, 0.6);
            backdrop-filter: blur(10px);
            border-radius: 1.5rem;
            padding: 2rem;
            text-align: center;
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.3);
            cursor: pointer;
        }

        .feature-card:hover {
            transform: translateY(-10px) scale(1.05);
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }

        .feature-icon {
            width: 60px;
            height: 60px;
            background: var(--gradient-primary);
            border-radius: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 1.5rem;
            color: white;
            transition: all 0.3s ease;
        }

        .feature-card:hover .feature-icon {
            transform: scale(1.1) rotate(5deg);
        }

        /* CTA Buttons */
        .cta-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 2rem;
        }

        .btn-primary-gradient {
            background: var(--gradient-primary);
            border: none;
            color: white;
            padding: 1rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary-gradient:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: var(--shadow-hover);
            color: white;
        }

        .btn-outline-gradient {
            background: transparent;
            border: 2px solid #8b5cf6;
            color: #8b5cf6;
            padding: 1rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-outline-gradient:hover {
            background: rgba(139, 92, 246, 0.1);
            transform: translateY(-3px) scale(1.05);
            color: #8b5cf6;
        }

        /* Niche Section */
        .niche-section {
            padding: 5rem 0;
            position: relative;
            width: 100%;
        }

        .section-title {
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 800;
            background: linear-gradient(135deg, #1f2937, #4b5563);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-align: center;
            margin-bottom: 1rem;
        }

        .section-subtitle {
            font-size: 1.25rem;
            color: #64748b;
            text-align: center;
            margin-bottom: 4rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .niche-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .niche-card {
            background: rgba(255, 255, 255, 0.6);
            backdrop-filter: blur(10px);
            border-radius: 2rem;
            padding: 2.5rem;
            text-align: center;
            transition: all 0.5s ease;
            border: 1px solid rgba(255, 255, 255, 0.3);
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .niche-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(236, 72, 153, 0.1));
            opacity: 0;
            transition: opacity 0.5s ease;
        }

        .niche-card:hover::before {
            opacity: 1;
        }

        .niche-card:hover {
            transform: translateY(-15px) scale(1.05);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15);
            background: rgba(255, 255, 255, 0.9);
        }

        .niche-icon {
            font-size: 3rem;
            margin-bottom: 1.5rem;
            display: block;
            transition: all 0.3s ease;
        }

        .niche-card:hover .niche-icon {
            transform: scale(1.2) rotate(10deg);
        }

        .niche-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 1.5rem;
            transition: color 0.3s ease;
        }

        .niche-card:hover .niche-title {
            color: #8b5cf6;
        }

        /* Template Showcase Sections */
        .template-showcase {
            padding: 4rem 0;
            position: relative;
            width: 100%;
        }

        .template-showcase::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            opacity: 0.05;
            z-index: -1;
        }

        .fashion-showcase::before {
            background-image: url('https://images.unsplash.com/photo-1483985988355-763728e1935b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
        }

        .electronics-showcase::before {
            background-image: url('https://images.unsplash.com/photo-1518770660439-4636190af475?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
        }

        .home-showcase::before {
            background-image: url('https://images.unsplash.com/photo-1556911220-bff31c812dba?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
        }

        .template-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .template-card {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            border-radius: 1.5rem;
            overflow: hidden;
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.3);
            cursor: pointer;
        }

        .template-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
            background: rgba(255, 255, 255, 0.95);
        }

        .template-card-img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            transition: all 0.3s ease;
        }

        .template-card:hover .template-card-img {
            transform: scale(1.05);
        }

        .template-card-body {
            padding: 1.5rem;
        }

        .template-card-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 1rem;
        }

        .template-preview-btn {
            background: var(--gradient-primary);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .template-preview-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(139, 92, 246, 0.4);
            color: white;
        }

        /* Stats Section */
        .stats-section {
            padding: 5rem 0;
            position: relative;
            width: 100%;
        }

        .stats-container {
            background: rgba(255, 255, 255, 0.6);
            backdrop-filter: blur(20px);
            border-radius: 2rem;
            padding: 3rem;
            box-shadow: var(--shadow-primary);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 3rem;
            text-align: center;
        }

        .stat-item {
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .stat-item:hover {
            transform: translateY(-5px);
        }

        .stat-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 2rem;
            color: white;
            transition: all 0.3s ease;
        }

        .stat-item:hover .stat-icon {
            transform: scale(1.1);
        }

        .stat-icon.purple { background: linear-gradient(135deg,rgb(89, 115, 130),rgb(30, 22, 26)); }
        .stat-icon.blue { background: linear-gradient(135deg, #3b82f6, #06b6d4); }
        .stat-icon.green { background: linear-gradient(135deg, #10b981, #34d399); }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 800;
            color: #1f2937;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: #64748b;
            font-size: 1.1rem;
        }

        /* Animations */
        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            25% { transform: translateY(-20px) rotate(5deg); }
            50% { transform: translateY(-10px) rotate(-5deg); }
            75% { transform: translateY(-30px) rotate(3deg); }
        }

        @keyframes floatIcon {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            33% { transform: translateY(-15px) rotate(10deg); }
            66% { transform: translateY(-5px) rotate(-10deg); }
        }

        .fade-in-up {
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 1s ease forwards;
        }

        .delay-1 { animation-delay: 0.3s; }
        .delay-2 { animation-delay: 0.6s; }
        .delay-3 { animation-delay: 0.9s; }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive fixes */
        @media (max-width: 768px) {
            .glass-card { 
                padding: 2rem; 
                margin: 0 1rem 3rem 1rem;
            }
            .niche-grid { 
                grid-template-columns: 1fr; 
                gap: 1.5rem;
            }
            .template-grid { 
                grid-template-columns: 1fr; 
                gap: 1.5rem;
            }
            .stats-grid { 
                grid-template-columns: 1fr; 
                gap: 2rem; 
            }
            .cta-buttons { 
                flex-direction: column; 
                align-items: center; 
            }
            .hero-section {
                padding: 1rem 0;
            }
        }

        @media (max-width: 480px) {
            .container {
                padding: 0 0.5rem;
            }
            .feature-card {
                padding: 1.5rem;
            }
            .niche-card {
                padding: 2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<!-- Floating Background -->
<div class="floating-bg">
    <div class="floating-element"></div>
    <div class="floating-element"></div>
    <div class="floating-element"></div>
    <div class="floating-element"></div>
    <div class="floating-icon">🛍️</div>
    <div class="floating-icon">✨</div>
    <div class="floating-icon">📈</div>
</div>

<!-- Mouse Follower -->
<div class="mouse-follower" id="mouseFollower"></div>

<div class="content-wrapper">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="fade-in-up">
                <h1 class="hero-title">
                    Welcome to<br>
                    <span style="position: relative;">
                        Shop Lab
                        <span style="position: absolute; ;top: -20px; right: -20px; font-size: 2rem;">✨</span>
                    </span>
                </h1>
            </div>

            <div class="fade-in-up delay-1">
                <p class="hero-subtitle">
                    Pick your niche. Build your brand. Become that successful version of you.
                </p>
            </div>

            <div class="fade-in-up delay-2">
                <div class="glass-card">
                    <p style="font-size: 1.2rem; color: #4b5563; margin-bottom: 2rem; line-height: 1.6;">
                        Shop Lab is your all-in-one no-code platform to create and launch your own online store — effortlessly.
                        Whether you're starting a fashion line, selling handmade pieces, or curating your fave drops, you don't
                        need to know a single line of code.
                    </p>

                    <!-- Features Grid - Now stays in one row -->
                    <div class="features-grid">
                        <div class="feature-card">
                            <div class="feature-icon">🎨</div>
                            <h4 style="font-weight: 700; margin-bottom: 1rem; color: #1f2937;">Custom Branding</h4>
                            <p style="color: #64748b; font-size: 0.95rem;">Complete control over your store's look and feel</p>
                        </div>
                        <div class="feature-card">
                            <div class="feature-icon">📤</div>
                            <h4 style="font-weight: 700; margin-bottom: 1rem; color: #1f2937;">Product Uploads</h4>
                            <p style="color: #64748b; font-size: 0.95rem;">Drag-and-drop interface for easy inventory management</p>
                        </div>
                        <div class="feature-card">
                            <div class="feature-icon">📊</div>
                            <h4 style="font-weight: 700; margin-bottom: 1rem; color: #1f2937;">Real-time Analytics</h4>
                            <p style="color: #64748b; font-size: 0.95rem;">Built-in dashboard to track your performance</p>
                        </div>
                        <div class="feature-card">
                            <div class="feature-icon">💳</div>
                            <h4 style="font-weight: 700; margin-bottom: 1rem; color: #1f2937;">Payments & More</h4>
                            <p style="color: #64748b; font-size: 0.95rem;">Integrated payment processing and loyalty systems</p>
                        </div>
                    </div>

                    <div style="text-align: center; margin-top: 2rem;">
                        <p style="font-size: 1.1rem; color: #4b5563; margin-bottom: 1rem;">
                            You bring the vision, we give you everything to make it real.<br>
                            Fast. Flexible. Built for creators, side-hustlers, and future CEOs.
                        </p>
                        <div style="display: inline-flex; align-items: center; gap: 0.5rem; background: var(--gradient-primary); color: white; padding: 1rem 1.5rem; border-radius: 50px; font-weight: 700;">
                            ⚡ Your business era starts right now. Let's get it.
                        </div>
                    </div>
                </div>
            </div>

            <!-- CTA Buttons -->
            <div class="fade-in-up delay-3">
                <div class="cta-buttons">
                    <a href="#" class="btn-primary-gradient">
                        Start Building Now
                        <span>→</span>
                    </a>
                    <a href="#" class="btn-outline-gradient">
                        View Templates
                        <span>🌐</span>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Niche Selection -->
    <section class="niche-section">
        <div class="container">
            <h2 class="section-title">Choose Your Niche</h2>
            <p class="section-subtitle">
                Select from our curated collection of industry-specific templates
            </p>

            <div class="niche-grid">
                {% for niche in niches %}
                    <div class="niche-card" onclick="window.location.href='{{ path('app_niche', {'slug': niche.name|lower|replace({' & ': '-', ' ': '-', ',': ''}) }) }}'">
                        <span class="niche-icon">
                            {% if 'fashion' in niche.name|lower %}👗
                            {% elseif 'electronic' in niche.name|lower %}📱
                            {% elseif 'home' in niche.name|lower %}🏠
                            {% elseif 'beauty' in niche.name|lower %}💄
                            {% elseif 'sports' in niche.name|lower %}⚽
                            {% elseif 'art' in niche.name|lower %}🎨
                            {% else %}🛍️
                            {% endif %}
                        </span>
                        <h3 class="niche-title">{{ niche.name }}</h3>
                        <div class="btn-outline-gradient" style="display: inline-flex; padding: 0.75rem 1.5rem;">
                            Explore Templates
                            <span>→</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Template Showcases -->
    {% for niche in niches %}
        {% if 'fashion' in niche.name|lower %}
            <section class="template-showcase fashion-showcase">
                <div class="container">
                    <h2 class="section-title">{{ niche.name }}</h2>
                    <div class="template-grid">
                        {% for template in niche.templates|batch(3)|first %}
                            <div class="template-card">
                                <img src="{{ template.preview|default('/placeholder.svg?height=200&width=300') }}" 
                                     class="template-card-img" 
                                     alt="{{ template.name|default('Template Preview') }}">
                                <div class="template-card-body">
                                    <h5 class="template-card-title">{{ template.name|default('Coming Soon') }}</h5>
                                    {% if template.name == 'Trendy Boutique' %}
                                        <a href="https://127.0.0.1:8000/perview?#" class="template-preview-btn">
                                            Preview Template
                                            <span>→</span>
                                        </a>
                                    {% else %}
                                        <a href="{{ path('app_niche', {'slug': niche.name|lower|replace({' & ': '-', ' ': '-', ',': ''}) }) }}" 
                                           class="template-preview-btn">
                                            Preview Template
                                            <span>→</span>
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        {% else %}
                            <!-- Show placeholder cards when no templates -->
                            {% for i in 1..3 %}
